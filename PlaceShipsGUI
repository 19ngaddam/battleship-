import BreezySwing.*;
import javax.swing.*;
public class PlaceShipsGUI extends GBFrame {

	private JButton place2;
	private JButton place3;
	private JButton place4;
	private JButton place5;
	private JButton place6;
	private JButton done;
	
	
	Player p;
	
	public PlaceShipsGUI(Player p){
		this.p = p;
		place2 = addButton("Place Patrol Boat", 1, 1, 1, 1);
		place3 = addButton("Place Submarine", 2, 1, 1, 1);
		place4 = addButton("Place Battleship", 3, 1, 1, 1);
		place5 = addButton("Place Carrier", 4, 1, 1, 1);
		place6 = addButton("Place Ultimate PatrolBoat", 5, 1, 1, 1);
		done = addButton("Done", 6, 1, 2, 2);
		
		this.setSize(500, 500);
		this.setLocation(700, 100);
		this.setVisible(true);
	}
	
	public void buttonClicked(JButton b){
		if (b == place2){
			PlaceShipsBox box = new PlaceShipsBox(p, 2);
			box.setVisible(true);
			place2.setEnabled(false);
		}
		if (b == place3){
			PlaceShipsBox box = new PlaceShipsBox(p, 3);
			place3.setEnabled(false);
			box.setVisible(true);
		}
		if (b == place4){
			PlaceShipsBox box = new PlaceShipsBox(p, 4);
			place4.setEnabled(false);
			box.setVisible(true);
		}
		if (b == place5){
			PlaceShipsBox box = new PlaceShipsBox(p, 5);
			place5.setEnabled(false);
			box.setVisible(true);
		}
		if (b == place6){
			PlaceShipsBox box = new PlaceShipsBox(p, 6);
			place6.setEnabled(false);
			box.setVisible(true);
		}
		
		if(b == done){
			if(place2.isEnabled() || place3.isEnabled() || place4.isEnabled() || place5.isEnabled() || place6.isEnabled()){
				messageBox("You have not placed all the ships!!");
			}else{
				this.dispose();
			}
		}
	}
}
